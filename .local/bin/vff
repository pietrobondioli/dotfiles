#!/bin/bash

file=$(find ~/work ~/projects ~/sandbox ~/ -type f -print 2>/dev/null | fzf +m) || {
	echo "No files found"
	exit 1
}
dir=$(dirname "$file")
filename=$(basename "$file")

if [ -n "$dir" ]; then cd "$dir"; else
	echo "No selection made"
	exit 1
fi

[ -n "$filename" ] && nvim "$filename"
