#######
# i3 Configuration
#######
# For complete reference: https://i3wm.org/docs/userguide.html

#######
# Variables
#######
set $mod Mod4

#-------
# Fonts
#-------
font pango:monospace 8

# This font is scalable on retina/hidpi displays (thanks to pango)
#font pango:DejaVu Sans Mono 8

#######
# Autostarts
#######

#-------
# General Autostart
#-------
# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id xrandr --output DP-1 --primary --pos 0x1081 --output DP-2 --pos 0x0
exec_always --no-startup-id setxkbmap -layout us -variant intl
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

#-------
# Visual Autostart
#-------
exec_always --no-startup-id picom &
exec_always --no-startup-id feh --no-fehbg --bg-scale $HOME/.config/i3/wallpapers/background.jpg
exec_always --no-startup-id --no-startup-id $HOME/.config/polybar/launch.sh

#-------
# Utility Autostart
#-------
exec_always --no-startup-id mpd &
exec_always --no-startup-id dunst &
exec_always --no-startup-id battery&

#-------
# Lock and Network
#-------
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet

#######
# Keybindings
#######

#-------
# Audio Controls
#-------
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#-------
# Floating Windows
#-------
floating_modifier $mod
gaps inner 8px
tiling_drag modifier titlebar
for_window [class="firefox" title="Library"] floating enable
for_window [window_type="dialog"] floating enable
for_window [class="Steam" title="^Steam - Update News$"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="(?i)networkmanager_dmenu"] floating enable


#-------
# Default Programs
#-------
bindsym $mod+Return exec --no-startup-id kitty
bindsym $mod+Shift+Return exec --no-startup-id thunar
bindsym $mod+space exec --no-startup-id rofi -show drun

#-------
# Window Management
#-------
bindsym $mod+q kill
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

#-------
# Screenshots
#-------
bindsym $mod+Print exec "flameshot gui"
bindsym $mod+Shift+Print exec "flameshot full --path ~/Pictures/"

#-------
# Layouts and Focus
#-------
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+a focus parent

#-------
# Workspaces
#-------
workspace "m1w1" output DP-1
workspace "m1w2" output DP-1
workspace "m1w3" output DP-1
workspace "m2w1" output DP-2
workspace "m2w2" output DP-2
workspace "m2w3" output DP-2
set $m1w1 "m1w1"
set $m1w2 "m1w2"
set $m1w3 "m1w3"
set $m2w1 "m2w1"
set $m2w2 "m2w2"
set $m2w3 "m2w3"
bindsym $mod+Prior workspace prev
bindsym $mod+Next workspace next
bindsym $mod+Shift+Prior move container to workspace prev
bindsym $mod+Shift+Next move container to workspace next

#-------
# i3 Commands
#-------
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#-------
# Resizing
#-------
bindsym $mod+Ctrl+Right resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+Up resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+Down resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+Left resize grow width 1 px or 1 ppt

#######
# Bar Configuration
#######
bar {
        status_command i3status
}
